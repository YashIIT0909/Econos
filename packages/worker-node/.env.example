# Cronos zkEVM Testnet Configuration
CRONOS_RPC_URL=https://testnet.zkevm.cronos.org/
CRONOS_CHAIN_ID=240
BLOCK_CONFIRMATIONS=2

# Worker Identity (Generate a new Ethereum wallet)
WORKER_PRIVATE_KEY=0x_your_private_key_here
WORKER_ADDRESS=0x_your_address_here

# Contract Addresses (Deploy contracts first, then fill these)
ESCROW_CONTRACT_ADDRESS=0x_native_escrow_address
REGISTRY_CONTRACT_ADDRESS=0x_worker_registry_address
PAYMASTER_ADDRESS=0x_agent_paymaster_address

# EIP-712 Domain Configuration (must match master-agent)
EIP712_DOMAIN_NAME=Econos Master Agent
EIP712_DOMAIN_VERSION=1

# Crypto.com Developer Platform API Key
# Get from: https://ai-agent-sdk-docs.crypto.com/crypto.com-developer-platform/developer-platform-dashboard
CRYPTO_COM_API_KEY=your_crypto_com_api_key_here

# Google Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Coordinator Configuration
# Set to 'true' to enable event-driven task coordination (requires deployed contracts)
ENABLE_COORDINATOR=false
